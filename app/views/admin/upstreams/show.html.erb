<h3>Upstream info</h3>

<%= form_for @upstream, url: @upstream.new_record? ? admin_upstreams_url : admin_upstream_url(@upstream.id) do |f| %>
  <div class="card-deck float-left col-lg-12">
    <div class="card col-lg-6 ml-0">
      <div class="card-body">
        <div class="form-group">
          <label>Provider</label>
          <%= f.select :provider, options_for_select([['Binance', 'binance']], selected: @upstream.provider), {}, {class: "form-control mb-3"} %>

          <label>API Key</label>
          <%= f.text_field :api_key, class: 'form-control mb-3' %>

          <label>API Secret</label>
          <%= f.password_field :api_secret, value: @upstream.api_secret, class: 'form-control mb-3' %>

          <label>Timeout</label>
          <%= f.number_field :timeout, class: 'form-control mb-3' %>
        </div>

        <div class="form-group form-check">
          <%= f.check_box :enabled, class: 'form-check-input' %>
          <label class="form-check-label" for="upstream_enabled">Enabled</label>
        </div>

      </div>
    </div>

    <div class="row col-12 float-left">
      <%= f.submit 'Submit', class: 'btn btn-primary btn-lg mt-3' %>
    </div>
  </div>

<% end %>
