<div class="row">
  <div class="col-xs-24">
    <div class="card">
      <div class="card-header">Currencies Summary</div>
      <div class="card-body">
        <table class="table table-sm">
          <thead>
            <tr>
              <th>Name</th>
              <th class="text-right">Locked</th>
              <th class="text-right">Balance</th>
              <th class="text-right">Sum</th>
              <th class="text-right">Hot-Wallet Balance</th>
              <th class="text-right">Cold-Wallet Balance</th>
            </tr>
          </thead>
          <tbody>
            <% @currencies_summary.each do |c| %>
              <tr>
                <td><b><%= c[:name] %></td>
                <td class="text-right"><%= c[:locked] %></td>
                <td class="text-right"><%= c[:balance] %></td>
                <td class="text-right"><%= c[:sum] %></td>

                <% if c[:coinable] %>
                  <td class="text-right"><%= c[:hot] %></td>
                  <% if c[:hot] == 'N/A' || c[:hot].is_a?(Hash) %>
                    <td class="text-right"><%= 'N/A' %></td>
                  <% elsif c[:sum] - c[:hot] < 0 %>
                    <td class="text-right"><%= '0.0' %></td>
                  <% else %>
                    <td class="text-right"><%= c[:sum] - c[:hot] %></td>
                  <% end %>
                <% else %>
                  <td class="text-right">N/A</td>
                  <td class="text-right">N/A</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <span>Tips: Locked + Balance = Sum | Hot-Wallet + Cold-Wallet = Sum</span>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="card">
      <div class="card-header">Daemon Statuses</div>
      <div class="card-body">
        <table class="table table-sm">
          <thead>
            <tr>
              <th>Name</th>
              <th>State</th>
            </tr>
          </thead>
          <tbody>
            <% @daemon_statuses.each do |daemon, state| %>
              <tr>
                <% if state == :not_exists %>
                  <td class="text-danger"><b><%= daemon %></td>
                  <td class="text-danger"><b><%= state %></td>
                <% else %>
                  <td class="text-info"><%= daemon %></td>
                  <td class="text-info"><%= state %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="card">
      <div class="card-header">Exchange Summary</div>
      <div class="card-body">
        <table class="table table-sm">
          <thead>
            <tr>
              <th>Index</th>
              <th>Count</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Register Count</td>
              <td><%= @register_count %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
