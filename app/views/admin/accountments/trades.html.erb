<div class="container accountments-pages">
  <%= render 'tabs', active: :trade %>
  <div class="card card-accountments" id="trades">
    <div class="card-body">
      <div class="col-24">
        <div class="card">
          <div class="m-4">
            <div class="row">
              <div class="col-sm-6">
                <h5>Market</h5>
                <% Market.all.each do |market| %>
                  <%= link_to market.id, trades_admin_accountments_path(params.merge(market_id: market.id).except(:action,:controller)), :class => 'btn btn-sm btn-primary'%>
                <% end %>
                <%= link_to 'All', trades_admin_accountments_path(params.merge(market_id: nil).except(:action,:controller)), :class => 'btn btn-sm btn-primary'%>
              </div>
              <div class="col-sm-6">
                 <h5>Page</h5>
                 <%= link_to '20', trades_admin_accountments_path(params.merge(per_page: 20).except(:action,:controller)), :class => 'btn btn-sm btn-primary'%>
                 <%= link_to '50', trades_admin_accountments_path(params.merge(per_page: 50).except(:action,:controller)), :class => 'btn btn-sm btn-primary'%>
                 <%= link_to '100', trades_admin_accountments_path(params.merge(per_page: 100).except(:action,:controller)), :class => 'btn btn-sm btn-primary'%>
                 <%= link_to '200', trades_admin_accountments_path(params.merge(per_page: 200).except(:action,:controller)), :class => 'btn btn-sm btn-primary'%>
                 <% count = Trade.count%>
                 <%= link_to 'all', trades_admin_accountments_path(params.merge(per_page: count).except(:action,:controller)), :class => 'btn btn-sm btn-primary'%>
              </div>
             </div>
          </div>
        </div>
        <table class="table table-condensed table-striped">
          <thead>
          <tr>
            <th><%= sort_link t('.id'), 'Id' %></th>
            <th><%= t('.bid_member_email') %></th>
            <th><%= t('.ask_member_email') %></th>
            <th><%= sort_link t('.price'), 'Price' %></th>
            <th><%= sort_link t('.volume'), 'Volume' %></th>
            <th><%= sort_link t('.ask_id'), 'Bid' %></th>
            <th><%= sort_link t('.bid_id'), 'Ask' %></th>
            <th><%= sort_link t('.trend'), 'Trend' %></th>
            <th><%= sort_link t('.market_id'), 'Market' %></th>
            <th><%= sort_link t('.funds'), 'Funds' %></th>
            <th><%= sort_link t('.created_at'), 'Created At' %></th>
          </tr>
          </thead>
          <tbody class="list">
            <%= render partial: 'trade', collection: @trades %>
          </tbody>
        </table>
        <div class="float-right">
          <%= paginate @trades %>
        </div>
      </div>
    </div>
  </div>
</div>